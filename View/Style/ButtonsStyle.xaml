                                <Setter Property="Background" Value="{DynamicResource ButtonIsFocusBackgroundColor}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
            </Border>
        </Grid>
    </ControlTemplate>
