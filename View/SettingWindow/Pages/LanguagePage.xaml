<Page x:Class="SimulatorLogicDevices.View.SettingWindow.Pages.LanguagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SimulatorLogicDevices.View.SettingWindow.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LanguagePage" FontFamily="Georgia">
    <Grid Margin="10">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="{DynamicResource TextLanguage}" Style="{DynamicResource ContentStyle}"/>
            <StackPanel Orientation="Vertical" Margin="0,10,0,0">
                <RadioButton x:Name="LanguageRU" Content="{DynamicResource TextRussia}" Style="{DynamicResource RadioButtonStyle}"/>
                <RadioButton x:Name="LanguageENG" Margin="0,10,0,0" Content="{DynamicResource TextEnglish}" Style="{DynamicResource RadioButtonStyle}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
